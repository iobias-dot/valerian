

<% content_for :title, "Student_Guardians" %>

<h1>Student_Guardians</h1>

<table>
  <thead>
    <tr>
      <th>Guardian</th>
      <th>Student</th>
      <th>Relationship</th>
      <th>Show</th>
    </tr>
  </thead>
  <tbody>
    <% @student_guardians.each do |student_guardian| %>
      <tr>
        <td><%= student_guardian.guardian.name %></td>
        <td><%= student_guardian.student.name %></td>
        <td><%= student_guardian.guardianship %></td>
        <td><%= link_to "Show this student_guardian", student_guardian%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New student_guardian", new_student_guardian_path %>
